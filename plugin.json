{
  "name": "jira-writer",
  "version": "0.0.1",
  "description": "Create and update Jira Cloud tickets with rich content, including automatic Mermaid diagram embedding",
  "author": "Yunid Bauza",
  "repository": "https://github.com/yunidbauza/jira-writer-plugin",
  "skills": [
    "skills/jira-writer.md"
  ],
  "scripts": {
    "check-prerequisites": "scripts/check-prerequisites.sh",
    "mermaid-upload": "scripts/jira-mermaid-upload.sh",
    "mermaid-batch-upload": "scripts/jira-mermaid-batch-upload.sh"
  },
  "environment": {
    "required": [],
    "optional": [
      {
        "name": "JIRA_DOMAIN",
        "description": "Your Jira Cloud domain (e.g., company.atlassian.net)"
      },
      {
        "name": "JIRA_API_KEY",
        "description": "Your Jira API credentials in format: email@domain.com:api_token"
      }
    ]
  },
  "dependencies": {
    "mcp": {
      "atlassian": {
        "description": "Atlassian MCP server for Jira operations",
        "required": true,
        "installUrl": "https://github.com/atlassian/mcp-server"
      }
    },
    "cli": [
      {
        "name": "mmdc",
        "description": "Mermaid CLI for diagram conversion",
        "installCmd": "npm install -g @mermaid-js/mermaid-cli",
        "required": false
      },
      {
        "name": "jq",
        "description": "JSON processor",
        "installCmd": "brew install jq",
        "required": false
      }
    ]
  }
}
